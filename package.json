{
  "name": "@johnlindquist/kit",
  "type": "module",
  "bin": {
    "kit": "./bin/kit",
    "sk": "./bin/sk",
    "kitblitz": "./bin/kitblitz.mjs"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "version": "0.0.0-development",
  "description": "The Script Kit sdk",
  "repository": "github:johnlindquist/kit",
  "exports": {
    ".": "./index.js",
    "./*": "./*",
    "./api/*": "./api/*.js",
    "./cli/*": "./cli/*.js",
    "./target/*": "./target/*.js",
    "./platform/*": "./platform/*.js",
    "./run/*": "./run/*.js",
    "./core/*": "./core/*.js",
    "./cjs/*": "./core/*.cjs"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build-kit": "./build/build-kit.sh",
    "dev": "tsc --watch",
    "declaration": "tsc -p ./tsconfig-declaration.json --watch",
    "pretest:core": "node ./scripts/test-pre.js",
    "test:core": "NODE_NO_WARNINGS=1 ava ./src/core/*.test.js",
    "posttest:core": "node ./scripts/test-post.js",
    "pretest": "node ./scripts/test-pre.js",
    "test": "NODE_NO_WARNINGS=1 ava",
    "posttest": "node ./scripts/test-post.js",
    "cjs": "source ./build/set-env-vars.sh && npx tsc --project ./tsconfig-cjs.json --outDir \"$KIT/cjs\" && node ./scripts/cjs-fix.js"
  },
  "author": "John Lindquist (https://johnlindquist.com)",
  "license": "ISC",
  "dependencies": {
    "@johnlindquist/globals": "^1.0.10",
    "@johnlindquist/kit-internal": "^1.1.1",
    "@types/minimist": "^1.2.2",
    "@types/node-notifier": "^8.0.1",
    "@types/shelljs": "^0.8.9",
    "ansi-to-html": "^0.7.1",
    "clipboardy": "^2.3.0",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "enquirer": "^2.3.6",
    "esbuild": "^0.13.8",
    "lowdb": "^2.1.0",
    "minimist": "^1.2.5",
    "node-ipc": "^10.0.2",
    "node-notifier": "^10.0.0",
    "project-name-generator": "^2.1.9",
    "scriptkit-octokit": "^1.0.4",
    "shelljs": "^0.8.4",
    "strip-ansi": "^7.0.0",
    "trash": "^7.2.0"
  },
  "devDependencies": {
    "@types/concurrently": "^6.2.1",
    "@types/debug": "^4.1.7",
    "@types/dotenv-flow": "^3.2.0",
    "@types/lowdb": "^1.0.11",
    "@types/node": "^16.11.4",
    "@types/node-ipc": "^9.1.5",
    "@types/rimraf": "^3.0.2",
    "ava": "^3.15.0",
    "concurrently": "^6.2.1",
    "debug": "^4.3.2",
    "docusaurus-plugin-typedoc": "^0.16.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.7",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "tsc-watch": "^4.5.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.2"
  },
  "ava": {
    "environmentVariables": {
      "KIT_TEST": "true"
    },
    "verbose": true,
    "files": [
      "src/**/*.test.js",
      "test/**/*.test.js"
    ]
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./.kit"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "./.kit/package.json"
          ]
        }
      ]
    ]
  }
}
