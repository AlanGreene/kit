{
  "name": "@johnlindquist/kit",
  "type": "module",
  "main": "./run.js",
  "bin": {
    "kit": "./kit"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "version": "0.0.0-development",
  "description": "",
  "types": "./types/kit.d.ts",
  "scripts": {
    "build-dist": "./build/build-dist.sh",
    "build-ci": "./build/build-ci.sh",
    "build-kit": "./build/build-kit.sh",
    "scripts": "npm run build-kit --watch",
    "dev": "npm run build-kit && ~/.kit/script ~/scripts/dist.js",
    "test": "ava",
    "dist": "./script ./scripts/dist.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ansi-to-html": "^0.6.15",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "cli-html": "^1.8.4",
    "clipboardy": "^2.3.0",
    "date-fns": "^2.21.1",
    "degit": "^2.8.4",
    "dotenv": "^8.2.0",
    "download": "^8.0.0",
    "enquirer": "^2.3.6",
    "handlebars": "^4.7.6",
    "kit-bridge": "^16.0.0",
    "lodash": "^4.17.20",
    "lodash-id": "^0.14.0",
    "lowdb": "^2.0.3",
    "marked": "^2.0.1",
    "minimist": "^1.2.5",
    "node-fetch": "^2.6.1",
    "node-ipc": "^9.1.4",
    "node-notifier": "^9.0.1",
    "project-name-generator": "^2.1.9",
    "rxjs": "^7.1.0",
    "scriptkit-octokit": "^1.0.4",
    "shelljs": "^0.8.4",
    "strip-ansi": "^6.0.0",
    "trash": "^7.0.0",
    "uuid": "^8.3.2",
    "zx": "^4.1.1"
  },
  "devDependencies": {
    "@types/concurrently": "^6.2.1",
    "@types/debug": "^4.1.7",
    "@types/degit": "^2.8.3",
    "@types/download": "^8.0.1",
    "@types/lodash": "^4.14.172",
    "@types/lowdb": "^1.0.9",
    "@types/marked": "^2.0.2",
    "@types/minimist": "^1.2.1",
    "@types/node": "^15.14.9",
    "@types/node-fetch": "^2.5.10",
    "@types/node-ipc": "^9.1.5",
    "@types/node-notifier": "^8.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/shelljs": "^0.8.8",
    "@types/uuid": "^8.3.1",
    "ava": "^3.15.0",
    "concurrently": "^6.0.1",
    "debug": "^4.3.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.7",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "typescript": "^4.2.3"
  },
  "ava": {
    "environmentVariables": {
      "KIT_TEST": "true"
    },
    "verbose": true,
    "files": [
      "test/*.js"
    ]
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "package.json"
          ]
        }
      ]
    ]
  }
}
