{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "*": ["./src/*", "./declarations/*", "./types/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "types/*.d.ts"],
  "exclude": ["./src/preload/**/*"]
}
