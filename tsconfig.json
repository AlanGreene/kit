{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "./",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "lib": ["esnext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "*": ["./src/*", "./declarations/*"]
    }
  },
  "include": ["./src/**/*.ts", "src/global.d.ts"],
  "exclude": ["./src/preload/**/*"]
}
